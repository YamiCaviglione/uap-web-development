---
const { filtroActual } = Astro.props; //trae el filtro actual q se esta usando
---
<div class="flex justify-center gap-2 my-5">
  {["todas", "incompletas", "completadas"].map(filtro => (
    //form para cada tipo de filtro
    <form method="GET" class="inline"> 
      <input type="hidden" name="filtro" value={filtro} />
      <button 
        type="submit" 
        class={`px-4 py-2 rounded font-bold border border-pink-300 ${filtroActual === filtro ? 'bg-pink-300 text-white' : 'bg-pink-100 hover:bg-pink-200'}`}
      >
        {/* muestra el nombre del filtro */}
        {filtro.charAt(0).toUpperCase() + filtro.slice(1)} 
      </button>
    </form>
  ))}
</div>